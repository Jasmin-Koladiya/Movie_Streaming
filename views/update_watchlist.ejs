<%- include('header') %>

<!--End topbar header-->
<div class="clearfix"></div>
	
  <div class="content-wrapper">
    <div class="container-fluid">

    <div class="row mt-3">
      <div class="col-lg-6">
         <div class="card">
           <div class="card-body">
           <div class="card-title">Update watchlist</div>
           <hr>
            <form  method="post" action="/watchlist/update_watchlistdata">
            <input type="hidden" value="<%= watchlist.id %>" name="id">

            <div class="form-group">
              <label for="input-2">Select movie</label>
              <% for (var c of movies) { %>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="movies[]" value="<%= c.movie_name %>" <% if (watchlist.movies.includes(c.movie_name)) { %> checked <% } %> />
                  <label class="form-check-label" for="movie-<%= c.id %>"><%= c.movie_name %></label>
                </div>
              <% } %>
            </div>
            

            <div class="form-group">
              <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Update Data</button>
            </div>
          </form>
         </div>
         </div>
      </div>

      
    </div><!--End Row-->

	<!--start overlay-->
		  <div class="overlay toggle-menu"></div>
		<!--end overlay-->

    </div>
    <!-- End container-fluid-->
    
   </div><!--End content-wrapper-->
   <!--Start Back To Top Button-->
    <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    <!--End Back To Top Button-->
	
	<!--Start footer-->
    <%- include('footer') %>
