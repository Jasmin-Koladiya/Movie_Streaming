<%- include('header') %>

<!--End topbar header-->
<div class="clearfix"></div>
	
  <div class="content-wrapper">
    <div class="container-fluid">

    <div class="row mt-3">
      <div class="col-lg-6">
         <div class="card">
           <div class="card-body">
           <div class="card-title">Add movie</div>
           <%if(flash.success && flash.success.length > 0){%>
            <div class="alert form-control" style="padding-left: 25px; padding-top: 8px;">
              <%=flash.success%>
            </div>
            <%}%>
           <hr>
            <form  method="post" action="/movie/insertData"  enctype="multipart/form-data">
           <div class="form-group">
            <label for="input-1">movie Name</label>
            <input type="text"name="movie_name" class="form-control" id="movie_name" placeholder="Enter movie Name">
           </div>
           <div class="form-group">
            <label for="input-1">movie type</label>
            <select class="form-control" name="type" id="type">
              <option value=" ">-- select Type--</option>
                <option value="Movie">Movie</option>
                <option value="series">series</option>
            </select>
           </div>
           <div class="form-group">
            <label for="input-1">movie description</label>
            <textarea name="description" id="description" class="form-control" cols="10" rows="10" placeholder="Enter movie description"></textarea>
           </div>
           <div class="form-group">
            <label for="input-1">movie Poster</label>
            <input type="file" name="avatar" id="avatar" class="form-control">
           </div>
           <div class="form-group">
            <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Add Data</button>
          </div>
          </form>
         </div>
         </div>
      </div>

      
    </div><!--End Row-->

	<!--start overlay-->
		  <div class="overlay toggle-menu"></div>
		<!--end overlay-->

    </div>
    <!-- End container-fluid-->
    
   </div><!--End content-wrapper-->
   <!--Start Back To Top Button-->
    <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    <!--End Back To Top Button-->
	
	<!--Start footer-->
    <%- include('footer') %>
