<%- include('header') %>
<div class="content-wrapper">
    <div class="container-fluid">
      <div class="row mt-3">
        <div class="col-lg-8">
           <div class="card">
            <div class="card-body">
                <div class="tab-pane" id="edit">
                    <form  method="post" action="/edite_profile" >
                        <input type="hidden" name="id" id="id" value="<%= data.id%>">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">name</label>
                            <div class="col-lg-9">
                                <input name="name" class="form-control" id="name"  type="text" value="<%= data.name%>" >
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Email</label>
                            <div class="col-lg-9">
                                <input   class="form-control" name="email" id="email"  type="text" value="<%= data.email%>">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Mobile Number</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="text" name="mobile" id="mobile" value="<%= data.mobile%>">
                            </div>
                        </div>
                
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                                <a href="/" class="btn btn-secondary">Cancel</a>
                                <input type="submit" class="btn btn-primary" value="Save Changes">
                            </div>
                        </div>
                    </form>
                </div>
                </div>
             
              
            </div>
        </div>
      </div>
      </div>
        
    </div>

	<!--start overlay-->
		  <div class="overlay toggle-menu"></div>
		<!--end overlay-->
	
    </div>
    <!-- End container-fluid-->
   </div>
<%- include('footer') %>
