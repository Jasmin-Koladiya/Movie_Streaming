<%- include('header') %>

<!--End topbar header-->
<div class="clearfix"></div>
	
<div class="content-wrapper">
  <div class="container-fluid">

    <div class="row mt-3">
      <div class="col-lg-6">
         <div class="card">
           <div class="card-body">
             <div class="card-title">Update User</div>
             <hr>
             <form  method="post" action="/edite_user" >
              <input type="hidden" value="<%= i.id %>" name="id">
           <div class="form-group">
            <label for="input-1">First Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Enter Your full Name"  value="<%= i.name %>">
           </div>
           <div class="form-group">
            <label for="input-2">Email</label>
            <input type="text"name="email" class="form-control" id="email" placeholder="Enter Your Email Address" value="<%= i.email %>">
           </div>
           <div class="form-group">
            <label for="input-2">Mobile Number</label>
            <input type="text" name="mobile" class="form-control" id="Mobile" placeholder="Enter Your Mobile Number" value="<%= i.mobile %>">
           </div>
           <div class="form-group">
            <label for="input-2">Plan</label>
            <select class="form-control" name="plan" id="plan">
              <% for (var pl of plan) { %>
                <option value="<%= pl.id %>" <% if ( pl.id == i.plan) {  %> <%= "selected" %> <% } %> >
                 <%= pl.plan_name %>
                </option>
              <% } %>
            </select>
            </div>
           <div class="form-group">
            <label for="input-4">Password</label>
            <input type="text"name="password" class="form-control" id="password" placeholder="Enter Password" value="<%= i.password %>">
           </div>
           <div class="form-group">
            <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Update Data</button>
          </div>
          </form>
         </div>
         </div>
      </div>

      
    </div><!--End Row-->

	<!--start overlay-->
		  <div class="overlay toggle-menu"></div>
		<!--end overlay-->

    </div>
    <!-- End container-fluid-->
    
   </div><!--End content-wrapper-->
   <!--Start Back To Top Button-->
    <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    <!--End Back To Top Button-->
	
	<!--Start footer-->
    <%- include('footer') %>
