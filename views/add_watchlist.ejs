<%- include('header') %>
  <!--End topbar header-->
  <div class="clearfix"></div>
  <div class="content-wrapper">
    <div class="container-fluid">
      <div class="row mt-3">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">
              <div class="card-title">Add watchlist</div>
              <%if(flash.success && flash.success.length > 0){%>
                <div class="alert form-control" style="padding-left: 25px; padding-top: 8px;">
                  <%=flash.success%>
                </div>
                <%}%>
              <hr>
              <form method="post" action="/watchlist/insertData">
                <div class="form-group">
                  <label for="input-2">Select User</label>
                  <select class="form-control" name="userid" id="userid">
                    <option value=" ">-- select user--</option>
                    <% for (var c of users){%>
                      <option value="<%=c.id %>">
                        <%=c.name%>
                      </option>
                      <%}%>
                  </select>
                </div>
                <div class="container">
                  <div class="form-group">
                    <label for="input-2">Select movie</label>
                    <% for (var c of movies){ %>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="movies[]"
                          id="<%= c.movie_name %> - <%= c.id %>" value="<%= c.movie_name %>">
                        <label class="form-check-label" for="movie-<%= c.id %>">
                          <%= c.movie_name %>
                        </label>
                      </div>
                      <% } %>
                  </div>
                </div>
                <div class="form-group">
                  <label for="input-2">Add Watchlist Date</label>
                  <input type="date" name="date" class="form-control" id="date">
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Add Data</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="overlay toggle-menu"></div>
    </div>
  </div>
  <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
  <%- include('footer') %>